<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Servlets Tutorial</display-name>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>org.rest.controller.UserController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>org.rest.controller.FileController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EventServlet</servlet-name>
        <servlet-class>org.rest.controller.EventController</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FileServlet</servlet-name>
        <url-pattern>/api/files</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventServlet</servlet-name>
        <url-pattern>/api/events</url-pattern>
    </servlet-mapping>
</web-app>
